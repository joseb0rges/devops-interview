{
  "family": "api-webhook-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::573412182393:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::573412182393:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "api-webhook",
      "image": "573412182393.dkr.ecr.us-east-1.amazonaws.com/api-webhook:latest",
      "cpu": 0,
      "memoryReservation": 128,
      "essential": true,
      "portMappings": [
        { "containerPort": 5000, "protocol": "tcp" }
      ],
      "environment": [],
      "mountPoints": [],
      "volumesFrom": [],
      "ulimits": [
        { "name": "nofile", "softLimit": 100000, "hardLimit": 1000000 }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/task-api",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
